@model GetVehicleDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        
       <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
               
               @Html.HiddenFor(model => model.id)

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
               
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RtoNumber" class="control-label"></label>
                <input asp-for="RtoNumber" class="form-control" />
                <span asp-validation-for="RtoNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fuel" class="control-label"></label>
                <input asp-for="fuel" class="form-control" />
                <span asp-validation-for="fuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
